<div class="col-6">
  <%= form_with(model: @category, local: true) do |form| %>
    <% if category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
      </div>
    <% end %>

    <div class="form-group row mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group row mb-3">
      <%= form.label 'Type' %>
      <%= form.select :transaction_type, ['Debit', 'Credit'], {}, {class: "form-control"} %>
    </div>
    <div class="form-group row mb-3">
        <%= form.label :person %>
        <%= form.collection_select(:person_ids, @people, :id, :name, {}, { multiple: true, class: "form-control", required: true}) %>                                
    </div>
    <div class="form-group row mb-3 justify-content-start">
      <%= form.submit class: "btn btn-outline-success col-4" %>
    </div>
  <% end %>
</div>
