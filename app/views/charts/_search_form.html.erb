  <%= form_for :search, method: :get do |form| %>
    <div class="form-group row mb-3">
      <%= form.date_field :start_date, value: @start_date.to_date, class: "col-3 me-2" %>
      <%= form.date_field :end_date, value: @end_date.to_date, class: "col-3 me-2" %>
      <%= form.submit 'Search', class: "btn btn-outline-success col-4" %>
    </div>
  <% end %>