<% if obj.any? %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Person</th>
        <th scope="col">Sum</th>
      </tr>
    </thead>
    <tbody>
      <% obj.each do |p|%>
        <% p.categories.each do |c|%>
          <td><%= link_to c.name, category_path(c) %></td>
          <td><%= link_to p.name, person_path(p) %></td>
          <td> N/A </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> No categories yet </p>
<% end %>